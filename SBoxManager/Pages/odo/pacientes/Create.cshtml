@page
@model SBoxManager.Pages.odo.pacientes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Paciente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Persona.Nombre" class="control-label"></label>
                <input asp-for="Persona.Nombre" class="form-control" />
                <span asp-validation-for="Persona.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.Apellido" class="control-label"></label>
                <input asp-for="Persona.Apellido" class="form-control" />
                <span asp-validation-for="Persona.Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.Sexo" class="control-label"></label>
                <select asp-for="Persona.Sexo" asp-items="Html.GetEnumSelectList(typeof(TipoSexo))" class="form-control" > </select>
                <span asp-validation-for="Persona.Sexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Persona.DoB" class="control-label"></label>
                <input asp-for="Persona.DoB" class="form-control" />
                <span asp-validation-for="Persona.DoB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.Foto" class="control-label"></label>
                <input asp-for="Paciente.Foto" class="form-control" type="file" />
                <span asp-validation-for="Paciente.Foto" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Paciente.Direccion" class="control-label"></label>
                <textarea asp-for="Paciente.Direccion" class="form-control"></textarea>
                <span asp-validation-for="Paciente.Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paciente.Ocupacion" class="control-label"></label>
                <input asp-for="Paciente.Ocupacion" class="form-control" />
                <span asp-validation-for="Paciente.Ocupacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
